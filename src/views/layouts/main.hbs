                    <form class="flex">
                        <input 
                            type="email" 
                            placeholder="Email của bạn..." 
                            class="flex-1 px-3 py-2 bg-gray-700 dark:bg-gray-800 text-white rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        >
