<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <h1>{{title}}</h1>
        {{#if currentCategory}}
        <p>Category: <span class="category-name">{{currentCategory.name}}</span></p>
        {{/if}}
    </div>
</div>

<!-- Search and Filters -->
<div class="filters-section">
    <div class="container">
        <div class="filters-wrapper">
            <!-- Search Form -->
            <form class="search-form" method="GET">
                <div class="search-input-group">
                    <input type="text" name="search" placeholder="Search posts..." value="{{search}}" class="search-input">
                    <button type="submit" class="search-btn">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                {{#if category}}
                <input type="hidden" name="category" value="{{category}}">
                {{/if}}
            </form>

            <!-- Category Filter -->
            <div class="category-filter">
                <select onchange="filterByCategory(this.value)" class="category-select">
                    <option value="">All Categories</option>
                    {{#each categories}}
                    <option value="{{id}}" {{#if (eq ../currentCategory this.id)}}selected{{/if}}>
                        {{name}}
                    </option>
                    {{/each}}
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Posts Grid -->
<section class="posts-section">
    <div class="container">
        {{#if posts.length}}
        <div class="posts-grid">
            {{#each posts}}
            <article class="post-card">
                {{#if featuredImage}}
                <div class="post-image">
                    <img src="{{featuredImage}}" alt="{{title}}" loading="lazy">
                    {{#if isFeatured}}
                    <span class="featured-badge">Featured</span>
                    {{/if}}
                </div>
                {{/if}}
                
                <div class="post-content">
                    <div class="post-meta">
                        {{#if category}}
                        <span class="category" style="background-color: {{category.color}}">
                            {{category.name}}
                        </span>
                        {{/if}}
                        <time datetime="{{publishedAt}}">{{formatDate publishedAt}}</time>
                    </div>
                    
                    <h2 class="post-title">
                        <a href="/posts/{{slug}}">{{title}}</a>
                    </h2>
                    
                    <p class="post-excerpt">{{excerpt}}</p>
                    
                    <div class="post-footer">
                        <div class="author-info">
                            <i class="fas fa-user"></i>
                            <span>{{author.firstName}} {{author.lastName}}</span>
                        </div>
                        <div class="post-stats">
                            <span><i class="fas fa-eye"></i> {{viewsCount}}</span>
                            <span><i class="fas fa-comments"></i> {{commentsCount}}</span>
                        </div>
                    </div>
                    
                    {{#if tags.length}}
                    <div class="post-tags">
                        {{#each tags}}
                        <span class="tag">{{name}}</span>
                        {{/each}}
                    </div>
                    {{/if}}
                </div>
            </article>
            {{/each}}
        </div>

        <!-- Pagination -->
        {{#if pagination}}
        <div class="pagination-wrapper">
            <nav class="pagination" aria-label="Posts pagination">
                {{#if pagination.hasPrevious}}
                <a href="?page={{pagination.previousPage}}{{#if search}}&search={{search}}{{/if}}{{#if currentCategory}}&category={{currentCategory}}{{/if}}" class="pagination-link pagination-prev">
                    <i class="fas fa-chevron-left"></i> Previous
                </a>
                {{/if}}

                <div class="pagination-pages">
                    {{#each (pagination pagination.currentPage pagination.totalPages baseUrl)}}
                    {{#if current}}
                    <span class="pagination-link pagination-current">{{number}}</span>
                    {{else}}
                    <a href="{{url}}{{#if ../search}}&search={{../search}}{{/if}}{{#if ../currentCategory}}&category={{../currentCategory}}{{/if}}" class="pagination-link">{{number}}</a>
                    {{/if}}
                    {{/each}}
                </div>

                {{#if pagination.hasNext}}
                <a href="?page={{pagination.nextPage}}{{#if search}}&search={{search}}{{/if}}{{#if currentCategory}}&category={{currentCategory}}{{/if}}" class="pagination-link pagination-next">
                    Next <i class="fas fa-chevron-right"></i>
                </a>
                {{/if}}
            </nav>
        </div>
        {{/if}}

        {{else}}
        <!-- Empty State -->
        <div class="empty-state">
            <i class="fas fa-file-alt"></i>
            <h3>No posts found</h3>
            {{#if search}}
            <p>No posts match your search for "{{search}}"</p>
            <a href="/posts" class="btn btn-primary">View All Posts</a>
            {{else}}
            <p>There are no published posts yet. Check back later!</p>
            <a href="/" class="btn btn-primary">Go Home</a>
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>

<script>
function filterByCategory(categoryId) {
    const url = new URL(window.location);
    if (categoryId) {
        url.searchParams.set('category', categoryId);
    } else {
        url.searchParams.delete('category');
    }
    url.searchParams.delete('page'); // Reset to first page
    window.location.href = url.toString();
}
</script>

