            <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 max-w-2xl mx-auto">
                <div class="text-center">
                    <div class="text-3xl md:text-4xl font-bold text-yellow-300 mb-2">{{stats.posts.total}}+</div>
                    <div class="text-blue-200">Bài viết</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl md:text-4xl font-bold text-yellow-300 mb-2">{{stats.categories.total}}+</div>
                    <div class="text-blue-200">Danh mục</div>
                </div>
