<script>
function handleNewsletterSubscribe(event) {
    event.preventDefault();
    const email = event.target.querySelector('input[type="email"]').value;
    
    // Simple validation
    if (!email) {
        alert('Vui lòng nhập email của bạn');
        return;
    }
    
