                    <div class="text-3xl md:text-4xl font-bold text-yellow-300 mb-2">{{stats.users.total}}+</div>
                    <div class="text-blue-200">Thành viên</div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <a href="#featured" class="text-white hover:text-yellow-300 transition-colors">
            <i class="fas fa-chevron-down text-2xl"></i>
        </a>
    </div>
</section>

<!-- Featured Posts -->
