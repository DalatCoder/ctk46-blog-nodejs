<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-blue-600 via-purple-600 to-indigo-700 text-white overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 bg-black bg-opacity-20"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-blue-600/10 to-purple-600/10"></div>
    
    <!-- Animated background elements -->
    <div class="absolute top-10 left-10 w-20 h-20 bg-white bg-opacity-10 rounded-full animate-pulse"></div>
    <div class="absolute top-32 right-16 w-16 h-16 bg-white bg-opacity-10 rounded-full animate-bounce delay-75"></div>
    <div class="absolute bottom-20 left-32 w-12 h-12 bg-white bg-opacity-10 rounded-full animate-pulse delay-150"></div>
    <div class="absolute bottom-40 right-20 w-24 h-24 bg-white bg-opacity-10 rounded-full animate-bounce delay-300"></div>
    
    <div class="relative container mx-auto px-4 py-20 lg:py-32">
        <div class="text-center max-w-4xl mx-auto">
            <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight">
                Welcome to 
                <span class="bg-gradient-to-r from-yellow-300 to-orange-400 bg-clip-text text-transparent">
                    Dynamic Blog
                </span>
            </h1>
            <p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-3xl mx-auto leading-relaxed">
                Khám phá những bài viết tuyệt vời về công nghệ, lập trình và phát triển web. 
                Nơi chia sẻ kiến thức và truyền cảm hứng cho cộng đồng developer.
            </p>
            
            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
                <a href="/posts" class="bg-white text-blue-600 px-8 py-4 rounded-full font-semibold text-lg hover:bg-blue-50 transform hover:scale-105 transition-all duration-300 shadow-lg">
                    <i class="fas fa-rocket mr-2"></i>
                    Khám phá bài viết
                </a>
                <a href="#categories" class="border-2 border-white text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-white hover:text-blue-600 transform hover:scale-105 transition-all duration-300">
                    <i class="fas fa-list mr-2"></i>
                    Xem danh mục
                </a>
