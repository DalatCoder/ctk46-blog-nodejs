<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1>Welcome to Dynamic Blog</h1>
            <p>Discover amazing content about technology, programming, and web development</p>
            <a href="/posts" class="btn btn-primary">Explore Posts</a>
        </div>
    </div>
</section>

<!-- Featured Posts -->
{{#if featuredPosts.length}}
<section class="featured-posts">
    <div class="container">
        <h2>Featured Posts</h2>
        <div class="posts-grid">
            {{#each featuredPosts}}
            <article class="post-card featured">
                {{#if featuredImage}}
                <div class="post-image">
                    <img src="{{featuredImage}}" alt="{{title}}">
                </div>
                {{/if}}
                <div class="post-content">
                    <div class="post-meta">
                        <span class="category" style="background-color: {{category.color}}">
                            {{category.name}}
                        </span>
                        <time>{{formatDate publishedAt}}</time>
                    </div>
                    <h3><a href="/posts/{{slug}}">{{title}}</a></h3>
                    <p>{{excerpt}}</p>
                    <div class="post-footer">
                        <div class="author">
                            By {{author.firstName}} {{author.lastName}}
                        </div>
                        <div class="post-stats">
                            <span><i class="fas fa-eye"></i> {{viewsCount}}</span>
                            <span><i class="fas fa-comments"></i> {{commentsCount}}</span>
                        </div>
                    </div>
                </div>
            </article>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

<!-- Recent Posts -->
<section class="recent-posts">
    <div class="container">
        <h2>Recent Posts</h2>
        <div class="posts-grid">
            {{#each recentPosts}}
            <article class="post-card">
                {{#if featuredImage}}
                <div class="post-image">
                    <img src="{{featuredImage}}" alt="{{title}}">
                </div>
                {{/if}}
                <div class="post-content">
                    <div class="post-meta">
                        <span class="category" style="background-color: {{category.color}}">
                            {{category.name}}
                        </span>
                        <time>{{formatDate publishedAt}}</time>
                    </div>
                    <h3><a href="/posts/{{slug}}">{{title}}</a></h3>
                    <p>{{excerpt}}</p>
                    <div class="post-footer">
                        <div class="author">
                            By {{author.firstName}} {{author.lastName}}
                        </div>
                        <div class="post-stats">
                            <span><i class="fas fa-eye"></i> {{viewsCount}}</span>
                            <span><i class="fas fa-comments"></i> {{commentsCount}}</span>
                        </div>
                    </div>
                </div>
            </article>
            {{else}}
            <div class="empty-state">
                <i class="fas fa-file-alt"></i>
                <h3>No posts yet</h3>
                <p>Check back later for amazing content!</p>
            </div>
            {{/each}}
        </div>
        
        {{#if recentPosts.length}}
        <div class="text-center">
            <a href="/posts" class="btn btn-outline">View All Posts</a>
        </div>
        {{/if}}
    </div>
</section>

<!-- Categories -->
{{#if categories.length}}
<section class="categories">
    <div class="container">
        <h2>Explore Categories</h2>
        <div class="categories-grid">
            {{#each categories}}
            <a href="/categories/{{slug}}" class="category-card" style="border-color: {{color}}">
                {{#if icon}}
                <i class="{{icon}}"></i>
                {{else}}
                <i class="fas fa-folder"></i>
                {{/if}}
                <h3>{{name}}</h3>
                <p>{{description}}</p>
                <span class="post-count">{{postCount}} {{pluralize postCount 'post' 'posts'}}</span>
            </a>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}

