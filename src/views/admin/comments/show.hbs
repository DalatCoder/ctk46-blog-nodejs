        hideQuickReply();
    }
    
    // Ctrl/Cmd + Enter to submit quick reply form if it's visible
    if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
        const quickReplyForm = document.getElementById('quickReplyForm');
        if (!quickReplyForm.classList.contains('hidden')) {
            const form = quickReplyForm.querySelector('form');
            if (form) {
                form.dispatchEvent(new Event('submit', { cancelable: true }));
            }
        }
    }
});
