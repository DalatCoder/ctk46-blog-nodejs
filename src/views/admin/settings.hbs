<!-- Page Header -->
<div class="flex items-center justify-between mb-8">
    <div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Cài đặt</h1>
        <p class="text-slate-600 dark:text-slate-400 mt-1">Quản lý cấu hình và tùy chọn trang web của bạn</p>
    </div>
</div>

<!-- Flash Messages -->
{{#if messages.success}}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        {{#each messages.success}}
            <p>{{this}}</p>
        {{/each}}
    </div>
{{/if}}

{{#if messages.error}}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        {{#each messages.error}}
            <p>{{this}}</p>
        {{/each}}
    </div>
{{/if}}

<!-- Settings Form -->
<form method="POST" action="/admin/settings" class="space-y-8">
    <!-- General Settings -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white flex items-center">
                <i class="fas fa-cog mr-3 text-blue-600"></i>
                Cài đặt chung
            </h3>
        </div>
        <div class="p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="setting_site_name" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                        Tên trang web
                    </label>
                    <input type="text" id="setting_site_name" name="setting_site_name" 
                           value="{{settings.general.site_name.value}}"
                           class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 px-3 py-2 text-slate-900 dark:text-white focus:border-blue-500 focus:ring-blue-500">
                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">{{settings.general.site_name.description}}</p>
                </div>
                
                <div>
                    <label for="setting_admin_email" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                        Email quản trị
                    </label>
                    <input type="email" id="setting_admin_email" name="setting_admin_email" 
                           value="{{settings.general.admin_email.value}}"
                           class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 px-3 py-2 text-slate-900 dark:text-white focus:border-blue-500 focus:ring-blue-500">
                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">{{settings.general.admin_email.description}}</p>
                </div>
            </div>
            
            <div>
                <label for="setting_site_description" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    Mô tả trang web
                </label>
                <textarea id="setting_site_description" name="setting_site_description" rows="3"
                          class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 px-3 py-2 text-slate-900 dark:text-white focus:border-blue-500 focus:ring-blue-500">{{settings.general.site_description.value}}</textarea>
                <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">{{settings.general.site_description.description}}</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="setting_site_keywords" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                        Từ khóa
                    </label>
                    <input type="text" id="setting_site_keywords" name="setting_site_keywords" 
                           value="{{settings.general.site_keywords.value}}"
                           class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 px-3 py-2 text-slate-900 dark:text-white focus:border-blue-500 focus:ring-blue-500">
                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">{{settings.general.site_keywords.description}}</p>
                </div>
                
                <div>
                    <label for="setting_timezone" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                        Múi giờ
                    </label>
                    <select id="setting_timezone" name="setting_timezone"
                            class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 px-3 py-2 text-slate-900 dark:text-white focus:border-blue-500 focus:ring-blue-500">
                        <option value="Asia/Ho_Chi_Minh" {{#if (eq settings.general.timezone.value 'Asia/Ho_Chi_Minh')}}selected{{/if}}>Asia/Ho_Chi_Minh</option>
                        <option value="UTC" {{#if (eq settings.general.timezone.value 'UTC')}}selected{{/if}}>UTC</option>
                        <option value="America/New_York" {{#if (eq settings.general.timezone.value 'America/New_York')}}selected{{/if}}>America/New_York</option>
                        <option value="Europe/London" {{#if (eq settings.general.timezone.value 'Europe/London')}}selected{{/if}}>Europe/London</option>
                    </select>
                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">{{settings.general.timezone.description}}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Settings -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white flex items-center">
                <i class="fas fa-file-alt mr-3 text-green-600"></i>
                Cài đặt nội dung
            </h3>
        </div>
        <div class="p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="setting_posts_per_page" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                        Số bài viết mỗi trang
                    </label>
                    <input type="number" id="setting_posts_per_page" name="setting_posts_per_page" 
                           value="{{settings.content.posts_per_page.value}}" min="1" max="50"
                           class="w-full rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 px-3 py-2 text-slate-900 dark:text-white focus:border-blue-500 focus:ring-blue-500">
                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">{{settings.content.posts_per_page.description}}</p>
                </div>
            </div>
            
            <div class="space-y-4">
                <div class="flex items-center">
                    <input type="checkbox" id="setting_enable_comments" name="setting_enable_comments" 
                           {{#if (eq settings.content.enable_comments.value 'true')}}checked{{/if}}
                           class="rounded border-slate-300 text-blue-600 focus:ring-blue-500 dark:border-slate-600 dark:bg-slate-700">
                    <label for="setting_enable_comments" class="ml-3 text-sm text-slate-700 dark:text-slate-300">
                        Cho phép bình luận
                    </label>
                </div>
                <p class="text-xs text-slate-500 dark:text-slate-400 ml-7">{{settings.content.enable_comments.description}}</p>
                
                <div class="flex items-center">
                    <input type="checkbox" id="setting_comment_moderation" name="setting_comment_moderation" 
                           {{#if (eq settings.content.comment_moderation.value 'true')}}checked{{/if}}
                           class="rounded border-slate-300 text-blue-600 focus:ring-blue-500 dark:border-slate-600 dark:bg-slate-700">
                    <label for="setting_comment_moderation" class="ml-3 text-sm text-slate-700 dark:text-slate-300">
                        Kiểm duyệt bình luận
                    </label>
                </div>
                <p class="text-xs text-slate-500 dark:text-slate-400 ml-7">{{settings.content.comment_moderation.description}}</p>
            </div>
        </div>
    </div>

    <!-- User Settings -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white flex items-center">
                <i class="fas fa-users mr-3 text-purple-600"></i>
                Cài đặt người dùng
            </h3>
        </div>
        <div class="p-6">
            <div class="flex items-center">
                <input type="checkbox" id="setting_enable_registration" name="setting_enable_registration" 
                       {{#if (eq settings.users.enable_registration.value 'true')}}checked{{/if}}
                       class="rounded border-slate-300 text-blue-600 focus:ring-blue-500 dark:border-slate-600 dark:bg-slate-700">
                <label for="setting_enable_registration" class="ml-3 text-sm text-slate-700 dark:text-slate-300">
                    Cho phép đăng ký người dùng
                </label>
            </div>
            <p class="text-xs text-slate-500 dark:text-slate-400 mt-1 ml-7">{{settings.users.enable_registration.description}}</p>
        </div>
    </div>

    <!-- System Settings -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white flex items-center">
                <i class="fas fa-server mr-3 text-red-600"></i>
                Cài đặt hệ thống
            </h3>
        </div>
        <div class="p-6">
            <div class="flex items-center">
                <input type="checkbox" id="setting_maintenance_mode" name="setting_maintenance_mode" 
                       {{#if (eq settings.system.maintenance_mode.value 'true')}}checked{{/if}}
                       class="rounded border-slate-300 text-red-600 focus:ring-red-500 dark:border-slate-600 dark:bg-slate-700">
                <label for="setting_maintenance_mode" class="ml-3 text-sm text-slate-700 dark:text-slate-300">
                    Chế độ bảo trì
                    <span class="ml-2 px-2 py-1 text-xs bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400 rounded">Cảnh báo</span>
                </label>
            </div>
            <p class="text-xs text-slate-500 dark:text-slate-400 mt-1 ml-7">{{settings.system.maintenance_mode.description}}</p>
        </div>
    </div>

    <!-- Analytics Settings -->
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50">
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white flex items-center">
                <i class="fas fa-chart-bar mr-3 text-yellow-600"></i>
                Cài đặt thống kê
            </h3>
        </div>
        <div class="p-6">
            <div>
                <label for="setting_google_analytics_id" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">
                    ID Google Analytics
                </label>
                <input type="text" id="setting_google_analytics_id" name="setting_google_analytics_id" 
                       value="{{settings.analytics.google_analytics_id.value}}"
                       placeholder="G-XXXXXXXXXX"
                       class="w-full md:w-1/2 rounded-lg border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-700 px-3 py-2 text-slate-900 dark:text-white focus:border-blue-500 focus:ring-blue-500">
                <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">{{settings.analytics.google_analytics_id.description}}</p>
            </div>
        </div>
    </div>

    <!-- Save Button -->
    <div class="flex items-center justify-end space-x-4 pt-6 border-t border-slate-200 dark:border-slate-700">
        <button type="button" onclick="window.location.reload()" class="px-6 py-2 text-slate-600 dark:text-slate-400 hover:text-slate-800 dark:hover:text-slate-200 font-medium">
            Làm mới
        </button>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition-colors">
            <i class="fas fa-save mr-2"></i>
            Lưu cài đặt
        </button>
    </div>
</form>

<!-- Backup & Restore Section -->
<div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden mt-8">
    <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-white flex items-center">
            <i class="fas fa-database mr-3 text-indigo-600"></i>
            Sao lưu & Khôi phục
        </h3>
    </div>
    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <h4 class="font-medium text-slate-900 dark:text-white mb-2">Xuất cài đặt</h4>
                <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">Tải xuống cài đặt hiện tại dưới dạng file JSON</p>
                <button onclick="exportSettings()" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                    <i class="fas fa-download mr-2"></i>
                    Xuất cài đặt
                </button>
            </div>
            <div>
                <h4 class="font-medium text-slate-900 dark:text-white mb-2">Nhập cài đặt</h4>
                <p class="text-sm text-slate-600 dark:text-slate-400 mb-4">Tải lên cài đặt từ file JSON</p>
                <input type="file" id="importFile" accept=".json" class="hidden">
                <button onclick="document.getElementById('importFile').click()" class="bg-orange-600 hover:bg-orange-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                    <i class="fas fa-upload mr-2"></i>
                    Nhập cài đặt
                </button>
            </div>
        </div>
    </div>
</div>

<script>
function exportSettings() {
    // Collect all form data
    const form = document.querySelector('form');
    const formData = new FormData(form);
    const settings = {};
    
    for (let [key, value] of formData.entries()) {
        if (key.startsWith('setting_')) {
            const settingKey = key.replace('setting_', '');
            settings[settingKey] = value;
        }
    }
    
    // Check for unchecked checkboxes
    const checkboxes = form.querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach(checkbox => {
        if (checkbox.name.startsWith('setting_')) {
            const settingKey = checkbox.name.replace('setting_', '');
            if (!checkbox.checked && !settings[settingKey]) {
                settings[settingKey] = 'false';
            }
        }
    });
    
    const dataStr = JSON.stringify(settings, null, 2);
    const dataBlob = new Blob([dataStr], {type: 'application/json'});
    const url = URL.createObjectURL(dataBlob);
    
    const link = document.createElement('a');
    link.href = url;
    link.download = 'settings-export-' + new Date().toISOString().split('T')[0] + '.json';
    link.click();
    
    URL.revokeObjectURL(url);
}

document.getElementById('importFile').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (!file) return;
    
    const reader = new FileReader();
    reader.onload = function(e) {
        try {
            const settings = JSON.parse(e.target.result);
            
            // Populate form with imported settings
            for (const [key, value] of Object.entries(settings)) {
                const element = document.querySelector(`[name="setting_${key}"]`);
                if (element) {
                    if (element.type === 'checkbox') {
                        element.checked = value === 'true' || value === true;
                    } else {
                        element.value = value;
                    }
                }
            }
            
            alert('Cài đặt đã được nhập thành công! Nhớ lưu form để áp dụng.');
        } catch (error) {
            alert('Lỗi khi nhập cài đặt: File JSON không hợp lệ');
        }
    };
    reader.readAsText(file);
});
</script>
